//@auth
//@req(envDomain, email, message)

var email = "jahia.support@jelastic.com",
    title = "Backup failed for " + envDomain,
    text = "Jahia backup failed for the environment " + envDomain + " of " + email + " with error message " + message;

try {
    resp = jelastic.message.email.Send(appid, session, null, email, email, title, text);
} catch (ex) {
    resp = error(Response.ERROR_UNKNOWN, toJSON(ex));
}

return resp;
